<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="en-US" version="1.0" root="root"
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd" tag-format="semantics/1.0">

  <rule id="root" scope="public">
		<one-of>
			<item>
				<one-of>
					<item>yes</item>
					<item>okey</item>
				</one-of>
				<tag>out.confirm=1</tag>
			</item>
			<item>
				<one-of>
					<item>no</item>
				</one-of>
				<tag>out.no=1</tag>
			</item>
			<item>
				<one-of>
					<item>ready</item>
					<item>I am ready</item>
					<item>next</item>
					<item>I'm done</item>
					<item>done</item>
				</one-of>
				<tag>out.ready=1</tag>
			</item>
			<item>
				<one-of>
					<item>start</item>
					<item>start timer</item>
				</one-of>
				<tag>out.start=1</tag>
			</item>
			<item>
				<one-of>
					<item>timer</item>
					<item>time</item>
				</one-of>
				<tag>out.timer=1</tag>
			</item>
			<item>
				<one-of>
					<item>again</item>
					<item>repeat</item>
					<item>one more</item>
				</one-of>
				<tag>out.repeat=1</tag>
			</item>
		<item>
			<one-of>
				<item>amount_</item>
				<item>many_</item>
			</one-of>
			<tag>out.question="measurement"</tag>
		</item>
	 	<item>
			<one-of>
				<item>ingredient_</item>
			</one-of>
			<tag>out.question="ingredient"</tag>
		</item>
 	 	</one-of>
 	 	</rule>
 	 
</grammar>