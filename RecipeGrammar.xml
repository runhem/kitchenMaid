<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="en-US" version="1.0" root="root"
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd" tag-format="semantics/1.0">

  <rule id="root" scope="public">
		<one-of>
			<item>
				<one-of>
					<item>yes</item>
				</one-of>
				<tag>out.confirm=1</tag>
			</item>
			<item>
				<one-of>
					<item>no</item>
				</one-of>
				<tag>out.no=1</tag>
			</item>
			<item>
				<one-of>
					<item>okay</item>
					<item>okey</item>
					<item>all right</item>
					<item>ok</item>
					<item>okidoki</item>
				</one-of>
				<tag>out.okay=1</tag>
			</item>
			<item>
				<one-of>
					<item>done</item>
					<item>I'm done</item>
					<item>done now</item>
				</one-of>
				<tag>out.ready=1</tag>
			</item>
			<item>
				<one-of>
					<item>start timer</item>
					<item>start</item>
					<item>start timer now</item>
				</one-of>
				<tag>out.set=1</tag>
			</item>
			<item>
				<one-of>
					<item>can you say that again</item>
					<item>again</item>
					<item>again please</item>
				</one-of>
				<tag>out.repeat=1</tag>
			</item>
			<item>
				<one-of>
					<item>unit_</item>
					<item>what unit_</item>
					<item>measurement_</item>
					<item>measure_</item>
				</one-of>
				<tag>out.question="measurement"</tag>
			</item>
			<item>
				<one-of>
					<item>much_</item>
					<item>amount_</item>
					<item>many_</item>
				</one-of>
				<tag>out.question="amount"</tag>
			</item>
		 	<item>
				<one-of>
					<item>ingredient_</item>
					<item>egg_</item>
				</one-of>
				<tag>out.question="ingredient"</tag>
			</item>
 	 	</one-of>
 	 	</rule>
 	 
</grammar>